! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #1d2021,  #ebdbb2,  #1d2021,  #3c3836,  #ebdbb2
rofi.color-urgent: #cc241d,  #f8f8f2,  #1d2021,  #6272a4,  #f8f8f2
rofi.color-active: #7c6f64,  #ebdbb2,  #282a36,  #cc241d,  #ebdbb2

!                  'background', 'border', 'separator'
rofi.color-window: #1d2021,      #458588,  #458588

rofi.font: Input 10
rofi.lines: 10

Xcursor.size: 16

! -----------------------------------------------------------------------------

URxvt.font: xft:office code pro:size=22,\
            xft:source code pro:size=22
URxvt.scrollBar: false
URxvt.letterSpace: -1
URxvt*depth: 32
URxvt*background: [80]#282A36

! -----------------------------------------------------------------------------

XTerm.termName: xterm-256color
XTerm.vt100.locale: true
XTerm.vt100.faceName: Input:size=20
           *VT100*translations:      #override \n\
               Ctrl Shift <Key>C:  copy-selection(SELECT) \n\
               Ctrl Shift <Key>V:  insert-selection(SELECT)

